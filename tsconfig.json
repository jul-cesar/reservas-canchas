{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",

    "lib": ["ESNext"],

    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["api/*.ts", "./*.js", "src/**/*.ts", "test/**/*.ts"]
}
